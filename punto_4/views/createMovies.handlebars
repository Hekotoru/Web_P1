<form class="container" method="POST" enctype="multipart/form-data">
  <div class="form-group {{validateName}}">
    <label for="Name">Name</label>
    <input type="text" class="form-control {{validateInputName}}" name="Name">
  </div>
  <div class="form-group {{validateDescription}}">
    <label for="Description">Description</label>
    <textarea class="form-control" name="Description" rows="3"></textarea>
  </div>
  <div class="form-group {{validateKeywords}}">
    <label for="Keywords">Keywords</label>
    <select class="form-control" name="Keywords">
      <option>Drama</option>
      <option>Accion</option>
      <option>Terror</option>
      <option>Comedia</option>
      <option>Romance</option>
      <option>Misterio</option>
    </select>
  </div>
  <div class="form-group {{validateImage}}">
    <label for="Image">Image</label>
    <input type="file" class="form-control-file" name="Image">
  </div>
  <button type="submit" class="btn btn-primary">Submit</button>
</form>